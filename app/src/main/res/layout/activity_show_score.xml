<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowScoreActivity"
    android:background="@drawable/backgroundimage"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center_horizontal|center_vertical">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_below="@+id/view1"
        android:id="@+id/textviewRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congratulations"
        android:textColor="#ffffff"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/textviewScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textviewRemarks"/>

    <Button
        android:id="@+id/BtnBacktoMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewScore"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_button_white"
        android:layout_marginLeft="15dp"
        android:text="Back to Main Menu"
        android:onClick="onClickedBacktoMainMenu"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/BtnBacktoMainMenu"/>

</RelativeLayout>
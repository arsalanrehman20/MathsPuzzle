<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainMenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="4"
        android:src="@drawable/applogo"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <Button
                android:id="@+id/btnEasy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedbutton"
                android:text="Easy"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:onClick="onClickedEasy"/>


            <Button
                android:id="@+id/btnMedium"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/btnEasy"
                android:layout_margin="5dp"
                android:background="@drawable/roundedbutton"
                android:text="Medium"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:onClick="onClickedMedium"/>

            <Button
                android:id="@+id/btnHard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/btnMedium"
                android:layout_margin="5dp"
                android:background="@drawable/roundedbutton"
                android:text="Hard"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:onClick="onClickedHard"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnRate"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:text="Rate App"
                android:layout_gravity="right|bottom"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:onClick="onClickedRateApp"/>

            <Button
                android:id="@+id/btnDev"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:text="Developer"
                android:layout_gravity="left|bottom"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:onClick="onClickedBtnDev"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>